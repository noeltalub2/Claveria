<%-include ("../Includes/Admin/head.ejs")%>

    <body>
        <script src="/assets/static/js/initTheme.js"></script>
        <div id="app">
            <%-include ("../Includes/Admin/header.ejs")%>
                <div id="main" class='layout-navbar navbar-fixed'>
                    <%-include ("../Includes/Admin/header_top.ejs")%>
                        <div id="main-content">

                            <div class="page-heading">
                                <div class="page-title">
                                    <div class="row">
                                        <div class="col-12 col-md-6 order-md-1 order-last">
                                            <h3>Conductor</h3>
                                            <p class="text-subtitle text-muted">Check all active conductor.</p>
                                        </div>
                                        <div class="col-12 col-md-6 order-md-2 order-first">
                                            <nav aria-label="breadcrumb"
                                                class="breadcrumb-header float-start float-lg-end">
                                                <ol class="breadcrumb">
                                                    <li class="breadcrumb-item"><a href="/admin/">Dashboard</a></li>
                                                    <li class="breadcrumb-item active" aria-current="page">Conductor
                                                    </li>
                                                </ol>
                                            </nav>
                                        </div>
                                    </div>
                                </div>
                                <section class="section">
                                    <div class="card">

                                        <div class="card-body">
                                            <div class="mb-2 row justify-content-end">
                                                <div class="col-auto">
                                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                                        data-bs-target="#exampleModal">
                                                        <i class="bi bi-plus-circle"></i> Add Conductor
                                                    </button>
                                                </div>
                                            </div>
                                            <div class="table-responsive-md">
                                                <table id="busTable" class="table table-hover " style="width:100%">
                                                    <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Fullname</th>
                                                            <th>Email</th>
                                                            <th>Contact</th>
                                                            <th>Address</th>
                                                            <th>Username</th>
                                                            <th class="text-center">Action</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <%conductors.forEach((conductor,index)=> {%>
                                                            <tr>
                                                                <td>
                                                                    <%=index + 1%>
                                                                </td>
                                                                <td>
                                                                    <%=conductor.fullname%>

                                                                </td>
                                                                <td>
                                                                    <%=conductor.email%>

                                                                </td>
                                                                <td>
                                                                    <%=conductor.contact%>

                                                                </td>
                                                                <td>
                                                                    <%=conductor.address%>

                                                                </td>
                                                                <td>
                                                                    <%=conductor.username%>

                                                                </td>
                                                                <td class="text-center">


                                                                    <button type="button"
                                                                        class="btn btn-primary btn-sm me-1 mb-1"
                                                                        onclick="editconductor('<%=conductor.cnd_id%>','<%=conductor.fullname%>','<%=conductor.email%>','<%=conductor.contact%>','<%=conductor.address%>','<%=conductor.username%>')"
                                                                        data-bs-toggle="modal"
                                                                        data-bs-target="#editconductor">
                                                                        <i class="bi bi-pencil"></i> Edit
                                                                    </button>
                                                                    <button type="button"
                                                                        class="btn btn-danger btn-sm me-1 mb-1"
                                                                        onclick="deleteConductor('<%=conductor.cnd_id%>')">
                                                                        <i class="bi bi-x"></i> Delete
                                                                    </button>
                                                                    <a href="/admin/conductor/<%=conductor.cnd_id%>" class="btn btn-info btn-sm me-1 mb-1"><i class="bi bi-eye"></i> Show Report</a>
                                                                </td>

                                                            </tr>
                                                            <%})%>
                                                    </tbody>
                                                </table>
                                            </div>


                                        </div>
                                    </div>
                                </section>
                            </div>

                        </div>
                </div>
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Add Conductor</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <form action="/admin/conductor/add" method="post" class="needs-validation" novalidate>
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <div class="form-group">
                                            <label for="fullnameLabel">Full Name</label>
                                            <input type="text" class="form-control" name="fullname" id="fullnameLabel"
                                                required>
                                            <div class="invalid-feedback">
                                                Please enter a full name.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-group">
                                            <label for="emailLabel">Email</label>
                                            <input type="email" class="form-control" name="email" id="emailLabel"
                                                required>
                                            <div class="invalid-feedback">
                                                Please enter a valid email address.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-group">
                                            <label for="contactLabel">Contact</label>
                                            <input type="text" class="form-control" name="contact" id="contactLabel"
                                                required>
                                            <div class="invalid-feedback">
                                                Please enter a contact number.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-group">
                                            <label for="addressLabel">Address</label>
                                            <input type="text" class="form-control" name="address" id="addressLabel"
                                                required>
                                            <div class="invalid-feedback">
                                                Please enter an address.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-group">
                                            <label for="usernameLabel">Username</label>
                                            <input type="text" class="form-control" name="username" id="usernameLabel"
                                                required>
                                            <div class="invalid-feedback">
                                                Please choose a username.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-group">
                                            <label for="passwordLabel">Password</label>
                                            <input type="password" class="form-control" name="password"
                                                id="passwordLabel" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                                                required>
                                            <div class="invalid-feedback">
                                                Password must contain at least one number, one uppercase and lowercase
                                                letter, and at least 8 or more characters.
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Add conductor</button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>



                <div class="modal fade" id="editconductor" tabindex="-1" aria-labelledby="exampleModalLabel23"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel23">Edit Conductor</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <form action="/admin/conductor/edit" method="post" class="needs-validation" novalidate>
                                <div class="modal-body">
                                    <input type="hidden" name="conductor_id" id="edit_conductor">
                                    <div class="mb-3">
                                        <div class="form-group">
                                            <label for="fullnameLabel">Full Name</label>
                                            <input type="text" class="form-control" name="fullname"
                                                id="edit_fullname" required>
                                            <div class="invalid-feedback">
                                                Please enter a full name.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-group">
                                            <label for="emailLabel">Email</label>
                                            <input type="email" class="form-control" name="email" id="edit_email"
                                                required>
                                            <div class="invalid-feedback">
                                                Please enter a valid email address.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-group">
                                            <label for="contactLabel">Contact</label>
                                            <input type="text" class="form-control" name="contact" id="edit_contact"
                                                required>
                                            <div class="invalid-feedback">
                                                Please enter a contact number.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-group">
                                            <label for="addressLabel">Address</label>
                                            <input type="text" class="form-control" name="address" id="edit_address"
                                                required>
                                            <div class="invalid-feedback">
                                                Please enter an address.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-group">
                                            <label for="usernameLabel">Username</label>
                                            <input type="text" class="form-control" name="username" id="edit_username"
                                                required>
                                            <div class="invalid-feedback">
                                                Please choose a username.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-group">
                                            <label for="passwordLabel">Password</label>
                                            <input type="password" class="form-control" name="password" placeholder="(Optional)"
                                                id="edit_password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                                                >
                                            <div class="invalid-feedback">
                                                Password must contain at least one number, one uppercase and lowercase
                                                letter, and at least 8 or more characters.
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Edit Conductor</button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
        </div>
        <%-include ("../Includes/Admin/script.ejs")%>

            <script src="/js/jquery.js"></script>
            <script src="/vendor/datatables/datatables.js"></script>
            <script src="/vendor/datatables/datatables.bootstrap.js"></script>


            <script src="/vendor/datatables/buttons_datatables.js"></script>

            <script src="/vendor/datatables/jszip_datatables.js"></script>
            <script src="/vendor/datatables/pdfmake_datatables.js"></script>
            <script src="/vendor/datatables/vfs_fonts_datatables.js"></script>
            <script src="/vendor/datatables/buttons_html5_datatables.js"></script>
            <script>
                new DataTable('#busTable', {


                });
            </script>

            <script>
                function editconductor(id, fullname, email, contact, address, username) {
                    
                    document.getElementById("edit_conductor").value = id
                    document.getElementById("edit_fullname").value = fullname
                    document.getElementById("edit_email").value = email
                    document.getElementById("edit_contact").value = contact
                    document.getElementById("edit_address").value = address
                    document.getElementById("edit_username").value = username

                }
            </script>
            <script>


                function deleteConductor(id) {
                    Swal.fire({
                        title: "Delete conductor",
                        text: `Are you sure you want to delete this conductor? This action cannot be undone.`,
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonText: "Confirm", // Set the text for the confirmation button
                        cancelButtonText: "Cancel",  // Set the text for the cancel button
                    }).then((result) => {
                        if (result.isConfirmed) {
                            fetch("/admin/conductor/delete", {
                                method: "DELETE",
                                body: JSON.stringify({ id }),
                                headers: { "Content-Type": "application/json" },
                            })
                                .then((res) => res.json())
                                .then((response) => {

                                    if (response.success) {
                                        Swal.fire(
                                            'Success!',
                                            `${response.message}`,
                                            'success'
                                        ).then(function () {
                                            window.location.href = '/admin/conductor';
                                        });
                                    }
                                    else {
                                        Swal.fire(
                                            'Error',
                                            `${response.message}`,
                                            'error'
                                        ).then(function () {
                                            window.location.href = '/admin/conductor';
                                        });
                                    }
                                });
                        } else if (result.isDismissed) {
                            // User clicked the "Cancel" button or outside the dialog
                            // You can add code for what should happen when the cancel button is clicked or the dialog is dismissed
                        }
                    });
                }
            </script>
            <script>
                // Example starter JavaScript for disabling form submissions if there are invalid fields
                (() => {
                    'use strict'

                    // Fetch all the forms we want to apply custom Bootstrap validation styles to
                    const forms = document.querySelectorAll('.needs-validation')

                    // Loop over them and prevent submission
                    Array.from(forms).forEach(form => {
                        form.addEventListener('submit', event => {
                            if (!form.checkValidity()) {
                                event.preventDefault()
                                event.stopPropagation()
                            }

                            form.classList.add('was-validated')
                        }, false)
                    })
                })()

            </script>
    </body>

    </html>